<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomePage.MVP.Market.MarketFragment">

    <ProgressBar
        android:id="@+id/market_bar"
        style="@android:style/Widget.Holo.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="@color/DarkerGrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Spinner
        android:id="@+id/market_spinner_company"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_margin="6dp"
        android:background="@drawable/spinnerbg">

    </Spinner>

    <Spinner
        android:id="@+id/market_spinner_category"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_margin="6dp"
        android:background="@drawable/spinnerbg">

    </Spinner>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="6dp"
        android:id="@+id/market_recycler">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>