<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".HomePage.MVP.Enquiry.EnquiryFragment">

    <LinearLayout
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white">
    </LinearLayout>

    <ScrollView
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_above="@+id/enquirybutton"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="textStart"
                android:text="If you have any questions or comments regarding our projects and services, leave us a message and we will get back to you,,"

                android:padding="3dp"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp">

                <EditText android:id="@+id/enquiryname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Your Name"
                    tools:ignore="HardcodedText"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp">

                <EditText android:id="@+id/enquirymobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mobile"
                    android:inputType="number"
                    android:maxLength="10"
                    tools:ignore="HardcodedText"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp">

                <EditText android:id="@+id/enquirycompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Company Name"
                    tools:ignore="HardcodedText"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp">

                <EditText android:id="@+id/enquiryemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Your Email ID"
                    tools:ignore="HardcodedText"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp">

                <EditText android:id="@+id/enquirymessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Your Enquiry"
                    tools:ignore="HardcodedText"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
    </ScrollView>

        <Button
            android:id="@+id/enquirybutton"
            android:layout_width="match_parent"
            android:layout_margin="6dp"
            android:layout_height="30dp"
            android:text="SEND"
            android:textScaleX="1.2"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/gradsend"
            android:textSize="15sp"/>


</RelativeLayout>