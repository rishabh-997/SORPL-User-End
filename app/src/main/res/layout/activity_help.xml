<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"
        />

    <TextView
        android:layout_marginTop="6dp"
        android:paddingRight="3dp"
        android:paddingLeft="3dp"
        android:textSize="16sp"
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Select the following companies for the following products."/>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="12dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textSize="17sp"
                android:padding="3dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subham Oils and Resins Pvt. Ltd."/>

            <TextView
                android:textSize="16sp"
                android:padding="3dp"
                android:fontFamily="sans-serif-light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alkyd And Synthetic Resin"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"/>

            <TextView
                android:textSize="17sp"
                android:padding="3dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Girdhari Chemicals and Resins Pvt. Ltd."/>

            <TextView
                android:textSize="16sp"
                android:padding="3dp"
                android:fontFamily="sans-serif-light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hard Resins and Solutions"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"/>

            <TextView
                android:textSize="17sp"
                android:padding="3dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bharti Chemicals"/>

            <TextView
                android:textSize="16sp"
                android:padding="3dp"
                android:fontFamily="sans-serif-light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pigments, Driers, Gum Rosin, DOP, Petroleum Resin"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>