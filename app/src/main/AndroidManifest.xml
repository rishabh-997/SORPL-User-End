<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rishabh.sorpluserend">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/sorpl"
        android:label="@string/app_name"
        android:roundIcon="@drawable/sorpl"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true">


        <service
            android:name="com.rishabh.sorpluserend.Services.MyFireBaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id"/>

        <activity
            android:name="com.rishabh.sorpluserend.Splash.MVP.SplashActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rishabh.sorpluserend.HomePage.MVP.HomeActivity"
            android:label="Home"
            android:theme="@style/AppTheme2"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.rishabh.sorpluserend.SignUp.MVP.SignUpActivity"
            android:label="SignUp"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.rishabh.sorpluserend.OTP.MVP.OTPActivity"
            android:label="OTP"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>
        <activity
            android:screenOrientation="portrait"
            android:name="com.rishabh.sorpluserend.LogIn.MVP.LogInActivity"
            android:label="Log In"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.rishabh.sorpluserend.ContactUs.MVP.ContactActivity"
            android:label="Contact Us"
            android:theme="@style/AppTheme"/>
        <activity
            android:name="com.rishabh.sorpluserend.FAQ.MVP.FAQActivity"
            android:label="FAQ's"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity android:name="com.rishabh.sorpluserend.AboutUs.AboutUsActivity"
            android:label="About Us"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity
            android:name="com.rishabh.sorpluserend.History.MVP.HistoryActivity"
            android:label="History"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity android:name="com.rishabh.sorpluserend.Cart.CartActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>
        <activity android:name="com.rishabh.sorpluserend.MyDetails.MVP.DetailActivity"
            android:theme="@style/AppTheme"
            android:label="Detail"
            android:screenOrientation="portrait"/>
        <activity android:name="com.rishabh.sorpluserend.AboutUsOnSignUp.AboutUs2Activity"
            android:label="About Us"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>
        <activity android:name="com.rishabh.sorpluserend.CompanyData.MVP.CompanyActivity"
            android:label="Company Data"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>
        <activity android:name="com.rishabh.sorpluserend.CompanyData.ViewActivity"
            android:label="PDF"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>
        <activity android:name="com.rishabh.sorpluserend.Help.MVP.HelpActivity"
            android:label="Help"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>
    </application>

</manifest>