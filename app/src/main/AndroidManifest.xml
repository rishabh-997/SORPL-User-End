<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sorpluserend">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/barrel"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/barrel"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <service
            android:name=".Services.MyFireBaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />

        <activity
            android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomePage.MVP.HomeActivity"
            android:label="Home" />
        <activity
            android:name=".SignUp.MVP.SignUpActivity"
            android:label="SignUp" />
        <activity
            android:name=".OTP.MVP.OTPActivity"
            android:label="OTP" />
        <activity android:name=".LogIn.MVP.LogInActivity"
            android:label="Log In"></activity>
    </application>

</manifest>